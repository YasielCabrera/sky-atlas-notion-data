{
  "compilerOptions": {
    "rootDir": ".",
    "incremental": true,
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "lib": ["esnext", "DOM"],
    "jsx": "react-jsx",
  },
  "include": ["**/*"],
  "exclude": ["dist", "node_modules", "output", "eslint.config.js"]
}
